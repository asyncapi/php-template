{
    "name": "asyncapi/broker-api",
    "type": "library",
    "description": "This is a high level API for message-driven communications to be used as template in AsyncAPI specs",
    "keywords": [
        "asyncapi",
        "broker-api"
    ],
    "homepage": "https://github.com/asyncapi/broker-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Emiliano Zublena",
            "email": "ezublena@gmail.com",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "php" : "~7.4",
        "php-amqplib/php-amqplib": "^2.12",
        "ramsey/uuid": "^4.1",
        "vlucas/phpdotenv": "^5.2"
    },
    "require-dev": {
        "phpspec/prophecy": "^1.12",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "{{ params.packageName }}\\": "src"
        },
        "files": [
            "configs/consts.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "{{ params.packageName }}\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit ./tests",
        "check-style": "phpcs src",
        "fix-style": "phpcbf src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
